{
  "manifest_version": 3,
  "name": "Phishing Detector (Multi-Source)",
  "version": "1.0",
  "permissions": [
    "tabs",
    "scripting",
    "storage",
    "identity",
    "identity.email"
  ],
  "host_permissions": [
    "https://services.nvd.nist.gov/*",
    "https://api.openai.com/*",
    "https://safebrowsing.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  }
}